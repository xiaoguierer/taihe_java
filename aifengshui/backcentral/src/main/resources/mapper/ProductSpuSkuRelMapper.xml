    SELECT
    <include refid="Base_Column_List" />
    FROM product_spu_sku_rel
    <where>
      <if test="id != null and id != ''">
        AND id = #{id}
      </if>
      <if test="spuId != null and spuId != ''">
        AND spu_id = #{spuId}
      </if>
      <if test="skuId != null and skuId != ''">
